{
  "name": "react-ui-collection",
  "version": "0.1.147",
  "description": "A collection of components, customable with SASS",
  "main": "dist/.",
  "jsnext:main": "components/index.js",
  "module": "dist/index.js",
  "files": [
    "components",
    "dist",
    "style",
    "README"
  ],
  "scripts": {
    "lint": "eslint components/** tests/**",
    "lintfix": "eslint --fix components/** tests/**",
    "prepublish": "npm run lint && npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "storybook": "start-storybook -p 6006",
    "test": "mocha --require tests/config/setup 'tests/**/*.test.js'",
    "test:watch": "mocha --require tests/config/setup 'tests/**/*.test.js' --watch",
    "test:cover": "istanbul cover -x *.test.js _mocha -- -R spec --require tests/config/setup 'tests/**/*.test.js'",
    "test:report": "cat ./coverage/lcov.info | codecov && rm -rf ./coverage",
    "build": "webpack",
    "docs": "build-storybook -o docs",
    "commit": "git cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Motistudio/react-ui-kit.git"
  },
  "keywords": [
    "react",
    "ui",
    "kit",
    "component"
  ],
  "author": "Moti Shriki",
  "license": "MIT",
  "devDependencies": {
    "@storybook/addon-knobs": "^3.2.18",
    "@storybook/addon-options": "^3.2.18",
    "@storybook/cli": "^3.2.18",
    "@storybook/react": "^3.2.18",
    "autoprefixer": "^7.2.3",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "chai": "^4.0.1",
    "chai-enzyme": "^0.7.1",
    "clean-webpack-plugin": "^0.1.17",
    "codecov.io": "^0.1.6",
    "commitizen": "^2.9.6",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.4",
    "cz-conventional-changelog": "^2.0.0",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.0.1",
    "eslint-plugin-standard": "^3.0.1",
    "eventsource-polyfill": "^0.9.6",
    "extract-text-webpack-plugin": "^2.1.2",
    "html-webpack-plugin": "^2.30.1",
    "isparta": "^4.0.0",
    "istanbul": "^1.1.0-alpha.1",
    "jsdom": "^9.12.0",
    "mocha": "^3.4.2",
    "node-sass": "^4.7.2",
    "postinstall-build": "^5.0.1",
    "react-addons-test-utils": "^15.5.1",
    "react-hot-loader": "^3.1.3",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "semantic-release": "^6.3.6",
    "sinon": "^2.3.2",
    "style-loader": "^0.18.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.0",
    "@fortawesome/fontawesome-free-regular": "^5.0.2",
    "@kadira/storybook-deployer": "^1.0.0",
    "classnames": "^2.2.5",
    "invariant": "^2.2.2",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-addons-css-transition-group": "^15.6.2",
    "react-dom": "^16.2.0",
    "react-portals": "^1.1.2"
  },
  "peerDependencies": {},
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
